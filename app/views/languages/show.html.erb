<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2><%= @language.name %></h2>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<h2>Popular Words</h2>
			<ul>
			<% @words.each do |word| %>
				<li><%= word.name %> - <%= word.translation %> </li>
			<% end %>
			</ul>
		</div>
	</div>
</div>