<div class="container" id="cards">

	<h1>Cards</h1>
	<div class="container">
		<table class="table table-striped table-hover">
			<thead>
				<th>#</th>
				<th>German</th>
				<th>English</th>
			</thead>
			<tbody>
				<% @cards.each_with_index do |card, index| %>
					<tr>
						<th><%= index %></th>
						<th><%= card.word.name %></th>
						<th><%= card.word.translation %></th>
					</tr>
				<% end %>
			</tbody>
		</table>
			
		<%= link_to new_card_path(), class: 'btn btn-primary pull-right' do %>
			Add Card
		<% end %>
	</div>

